<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zrb.houserental.activity.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mtv_rl_height"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/base_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="首页"
            android:textColor="@color/white"
            android:textSize="@dimen/view_top_bar_title"/>

        <ImageView
            android:id="@+id/base_toolbar_setting"
            android:layout_width="@dimen/mtv_rl_height"
            android:layout_height="@dimen/mtv_rl_height"
            android:layout_alignParentRight="true"
            android:padding="30px"
            android:src="@drawable/icon_setting"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/activity_main_houseperson_qury"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110px"
                android:layout_height="110px"
                android:src="@drawable/btn_pub_icon_recruit"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="房客查询"
                android:textColor="@color/white"/>

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/activity_main_housenull_qury"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110px"
                android:layout_height="110px"
                android:src="@drawable/btn_pub_icon_lease"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="空房查询"
                android:textColor="@color/white"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/activity_main_houseintime_qury"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110px"
                android:layout_height="110px"
                android:src="@drawable/btn_pub_icon_work"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="到期查询"
                android:textColor="@color/white"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </LinearLayout>

    <include layout="@layout/view_listview"
        ></include>

</LinearLayout>
