<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_addtenant_floor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="楼号"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/dpgl_05"/>

            <TextView
                android:id="@+id/activity_addtenant_floor_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/next"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="请选择楼号"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_room"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="房号"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/dpgl_05"/>

            <TextView
                android:id="@+id/activity_addtenant_room_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/next"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="请选择房号"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <View
            style="@style/line_1px"
            android:layout_marginTop="10dp"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="出租编号:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/activity_addtenant_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="20111500"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="房间状态:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="空房"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_unit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="单元租金:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/activity_addtenant_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="100"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_deposit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="出租押金:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <EditText
                android:id="@+id/activity_addtenant_deposit_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:gravity="center|right"
                android:hint="请输入出租押金"
                android:minWidth="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_advancemonths"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="预付月数:"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/dpgl_05"/>

            <TextView
                android:id="@+id/activity_addtenant_advancemonths_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/next"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="请选择预付月数"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_water_no"
