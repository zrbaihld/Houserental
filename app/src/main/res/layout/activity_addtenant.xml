                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="水费费率:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/activity_addtenant_water_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="水费费率"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_power_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="电费费率:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/activity_addtenant_power_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="电费费率"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_startday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="起租日期:"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/dpgl_05"/>

            <TextView
                android:id="@+id/activity_addtenant_startday_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/next"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="请选择起始日期"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_endday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="结束日期:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/activity_addtenant_endday_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="结束日期"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_waterstart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="起始水表:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <EditText
                android:id="@+id/activity_addtenant_waterstart_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:gravity="center|right"
                android:hint="请输入起始水表"
                android:minWidth="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_powerstart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="起始电表:"
                android:textColor="#000"
                android:textSize="16sp"
                />


            <EditText
                android:id="@+id/activity_addtenant_powerstart_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:gravity="center|right"
                android:hint="请输入起始电表"
                android:minWidth="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
