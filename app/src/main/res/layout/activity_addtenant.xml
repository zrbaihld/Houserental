                android:textSize="16sp"
                />
        </RelativeLayout>

        <View style="@style/line_1px"></View>

        <RelativeLayout
            android:id="@+id/activity_addtenant_remark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
